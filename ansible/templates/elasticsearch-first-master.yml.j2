# Elasticsearch configuration for first master node
cluster.name: {{ cluster_name }}
node.name: {{ inventory_hostname }}

# Bootstrap node configuration - hot data node with master role initially
# Master role can be safely removed later once other masters join
node.roles: [ master, data_hot, data_content, ingest, remote_cluster_client ]

# Node attributes for allocation
node.attr.data: hot

# Network settings
network.host: 0.0.0.0
http.port: 9200
transport.port: 9300

# Discovery settings for bootstrap node - setup for cluster formation
cluster.initial_master_nodes: [ "{{ bootstrap_node }}" ]

# Path settings
path.data: /var/lib/elasticsearch
path.logs: /var/log/elasticsearch

# Bootstrap node configuration - keep security disabled for now
# Will enable security after successful enrollment workflow
xpack.security.enabled: false

# Index settings for hot data node
indices.memory.index_buffer_size: 30%

# Cluster settings
cluster.routing.allocation.disk.threshold_enabled: true
cluster.routing.allocation.disk.watermark.low: 85%
cluster.routing.allocation.disk.watermark.high: 90%