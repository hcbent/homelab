# Simple health check endpoint for monitoring

server {
    listen {{ nginx_config.health_check_port }};
    server_name _;

    location {{ nginx_config.health_check_path }} {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
}
