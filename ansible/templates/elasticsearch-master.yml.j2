# Elasticsearch configuration for master nodes (enrolled via token)
# Note: Security and discovery settings are configured automatically during enrollment
cluster.name: {{ cluster_name }}
node.name: {{ inventory_hostname }}

# Master-only node configuration
node.roles: [ master ]

# Network settings
network.host: 0.0.0.0
http.port: 9200
transport.port: 9300

# Path settings
path.data: /var/lib/elasticsearch
path.logs: /var/log/elasticsearch

# Security settings (configured by enrollment - do not modify)
xpack.security.enabled: true
xpack.security.enrollment.enabled: true

# SSL settings will be auto-configured during enrollment
xpack.security.http.ssl:
  enabled: true
  keystore.path: certs/http.p12

xpack.security.transport.ssl:
  enabled: true
  verification_mode: certificate
  keystore.path: certs/transport.p12
  truststore.path: certs/transport.p12

# Cluster settings
cluster.routing.allocation.disk.threshold_enabled: true
cluster.routing.allocation.disk.watermark.low: 90%
cluster.routing.allocation.disk.watermark.high: 95%