# Example Ansible inventory for Monitoring Elasticsearch cluster
# Copy this file to 'monitoring' and configure for your environment
#
# IMPORTANT: Retrieve credentials from Vault before running playbooks
# vault kv get secret/homelab/elasticsearch/monitoring/credentials

[fleet_server]
fleet fleet_agent_version=9.1.3

[elasticsearch_bootstrap]
mes01

[elasticsearch_nodes]
mes02
mes03

[elasticsearch_masters]
mes01
mes02
mes03

[kibana_nodes]
mkib

[elasticsearch_all:children]
elasticsearch_bootstrap
elasticsearch_nodes

[elasticsearch_all:vars]
elasticsearch_version=9.1.4
cluster_name=monitoring
discovery_seed_hosts=["mes01","mes02","mes03"]
cluster_initial_master_nodes=["mes01","mes02","mes03"]
# Retrieve from Vault: vault kv get -field=username secret/homelab/elasticsearch/monitoring/credentials
elasticsearch_username=VAULT_SECRET_REFERENCE
# Retrieve from Vault: vault kv get -field=password secret/homelab/elasticsearch/monitoring/credentials
elasticsearch_password=VAULT_SECRET_REFERENCE

[kibana_nodes:vars]
kibana_version=9.1.3
elasticsearch_hosts=["http://mes01:9200","http://mes02:9200","http://mes03:9200"]
