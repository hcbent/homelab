csiDriver:
  # should be globally unique for a given cluster
  name: "org.democratic-csi.nfs"

storageClasses:
- name: freenas-nfs-csi
  defaultClass: false
  reclaimPolicy: Delete
  volumeBindingMode: Immediate
  allowVolumeExpansion: true
  parameters:
    fsType: nfs

  mountOptions:
  - noatime
  - nfsvers=4
  secrets:
    provisioner-secret:
    controller-publish-secret:
    node-stage-secret:
    node-publish-secret:
    controller-expand-secret:

driver:
  config:
    driver: freenas-nfs
    instance_id:
    httpConnection:
      protocol: https
      host: truenas.lab.thewortmans.org
      port: 443
      username: root
      # Retrieve from Vault: vault kv get -field=api_key secret/homelab/freenas/credentials
      apiKey: VAULT_SECRET_REFERENCE
      allowInsecure: false
    sshConnection:
      host: 192.168.2.24
      port: 22
      username: root
      # Use either password OR privateKey - retrieve from Vault
      # Retrieve password: vault kv get -field=password secret/homelab/freenas/ssh
      password: VAULT_SECRET_REFERENCE
      # Or use privateKey (retrieve with: vault kv get -field=private_key secret/homelab/freenas/ssh)
      # privateKey: |
      #   VAULT_SECRET_REFERENCE
    zfs:
      datasetParentName: tank/k8s/nfs/vols
      detachedSnapshotsDatasetParentName: tank/k8s/nfs/snaps
      datasetEnableQuotas: true
      datasetEnableReservation: false
      datasetPermissionsMode: "0777"
      datasetPermissionsUser: root
      datasetPermissionsGroup: wheel
    nfs:
      shareHost: 192.168.2.24
      shareAlldirs: false
      shareAllowedHosts: []
      shareAllowedNetworks: []
      shareMaprootUser: root
      shareMaprootGroup: wheel
      shareMapallUser: ""
      shareMapallGroup: ""
