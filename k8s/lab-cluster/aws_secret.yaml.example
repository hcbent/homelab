apiVersion: v1
kind: Secret
metadata:
  name: s3-creds
  namespace: elastic-stack
type: Opaque
stringData:
  # AWS S3 credentials for Elasticsearch snapshots
  # Retrieve from Vault: vault kv get secret/homelab/aws/s3
  s3.client.default.access_key: VAULT_SECRET_REFERENCE  # vault kv get -field=access_key secret/homelab/aws/s3
  s3.client.default.secret_key: VAULT_SECRET_REFERENCE  # vault kv get -field=secret_key secret/homelab/aws/s3
