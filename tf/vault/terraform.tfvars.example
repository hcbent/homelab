# Example Terraform variables for Vault VM
# Copy this to terraform.tfvars and customize

# Proxmox credentials
pm_user     = "terraform@pve"
pm_password = "your-terraform-password"

# Vault VM configuration
target_node = "pve1"
vmid        = 401
clone       = "ubuntu-25.04"
cores       = 2
memory      = 4096
disk_size   = "50G"
disk_storage = "tank"
ipconfig0   = "ip=192.168.10.41/24,gw=192.168.10.1"

# Cloud-init user
ciuser      = "bret"
cipassword  = "your-initial-password"
sshkeys     = <<-EOT
ssh-rsa AAAAB3NzaC1yc2E... your-public-key-here
EOT
